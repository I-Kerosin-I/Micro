<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Micro">
                    

    <!--Стиль таблички регистра-->   
    <Style x:Key="CpuStateRegisterLabelStyle" TargetType="Label">
        <Setter Property="Height" Value="25"/>
        <Setter Property="Padding" Value="0 0 0 0"/>
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Gray"/>
    </Style>
    <Style x:Key="RegisterViewLabelStyle" TargetType="Label">
        <Setter Property="Padding" Value="0 0 0 0"/>
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Gray"/>
    </Style>

    <Style TargetType="DataGrid" >
        <Setter Property="HorizontalGridLinesBrush" Value="#FFB3B3B3"/>
        <Setter Property="VerticalGridLinesBrush" Value="#FFB3B3B3"/>
        <Setter Property="BorderBrush" Value="#FF888888"/>
    </Style>
</ResourceDictionary>
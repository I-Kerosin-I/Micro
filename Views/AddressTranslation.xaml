<UserControl x:Class="Micro.Views.AddressTranslation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Micro.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:AddressTranslationViewModel, IsDesignTimeCreatable=True}">
    <Grid>
        <DataGrid ItemsSource="{Binding AddressTranslationTable.Table}" AutoGenerateColumns="False" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserSortColumns="False" CanUserAddRows="False" CanUserResizeRows="False" CanUserDeleteRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Начальный адрес" Binding="{Binding Address}"/>
                    <DataGridTextColumn Header="Код операции" Binding="{Binding Opcode}"/>
                </DataGrid.Columns>
            </DataGrid>
    </Grid>
</UserControl>

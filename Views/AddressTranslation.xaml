<UserControl x:Class="Micro.Views.AddressTranslation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Micro.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:AddressTranslationViewModel, IsDesignTimeCreatable=True}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding AddressTranslationTable.Table, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" AutoGenerateColumns="False" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserSortColumns="False" CanUserAddRows="False" CanUserResizeRows="False" CanUserDeleteRows="False" HeadersVisibility="Column">
                <DataGrid.Columns>
                <DataGridTextColumn Header="Начальный адрес" Binding="{Binding Address, Converter={StaticResource ByteToHexConverter}}"/>
                    <DataGridTextColumn Header="Код операции" Binding="{Binding Opcode}"/>
                </DataGrid.Columns>
            </DataGrid>
        <UniformGrid Grid.Row="1" Columns="2" VerticalAlignment="Center">
            <Button Content="Загрузить" Width="100" Command="{Binding LoadAddressTranslationTableCommand}" HorizontalAlignment="Center"  VerticalAlignment="Center" Height="25"/>
            <Button Content="Сохранить" Width="100" Command="{Binding SaveAddressTranslationTableCommand}" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25"/>

</UniformGrid>
    </Grid>
</UserControl>
